   35  git branch feature
   36  git checkout feature
   37  git log
   38  echo second file > file2
   39  git add .
   40  git commit -m "first commit in feature"
   41  git checkout master
   42  echo third file > file3
   43  git add .
   44  git commit -m "second commit in master"
   45  git log --oneline
   
